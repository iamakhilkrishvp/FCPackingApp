<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:layout_height="350dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetable"
        android:textSize="20sp"
        android:id="@+id/textView49"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/spinner3"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView49"
        android:layout_alignStart="@+id/textView49"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farm"
        android:textSize="20sp"
        android:id="@+id/textView51"
        android:layout_below="@+id/spinner3"
        android:layout_alignStart="@+id/spinner3"
        android:layout_marginTop="24dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/spinner4"
        android:visibility="invisible"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView51"
        android:layout_alignStart="@+id/textView51"
        android:layout_alignEnd="@+id/spinner3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:background="@drawable/textview_bg"
        android:paddingLeft="10dp"
        android:id="@+id/textView52"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/spinner3"
        android:layout_alignStart="@+id/spinner3"
        android:layout_above="@+id/textView51"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:id="@+id/editText5"
        android:hint="ordered quantity"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:background="@drawable/textview_bg"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/spinner4"
        android:layout_alignStart="@+id/spinner4"
      />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="SAVE"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/textview_bg"
        android:id="@+id/textView53"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:background="@drawable/textview_bg"
        android:paddingLeft="10dp"
        android:id="@+id/textView54"
        android:layout_above="@+id/editText5"
        android:layout_alignStart="@+id/spinner4"
        android:layout_alignTop="@+id/spinner4"
        android:layout_alignEnd="@+id/textView52" />

</RelativeLayout>