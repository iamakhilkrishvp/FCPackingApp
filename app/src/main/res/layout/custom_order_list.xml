<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/topLayout"
    android:background="@drawable/textview_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cucumber"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/vegNameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Stock : "
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView41"
        android:layout_below="@+id/vegNameText"
        android:layout_alignStart="@+id/vegNameText" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/recyclerView1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView95">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 Kg"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/qtyText"
        android:layout_alignTop="@+id/textView41"
        android:layout_toEndOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView42"
        android:textSize="16sp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/qtyText"
        android:text="TextView"
        android:layout_alignTop="@+id/qtyText"
        android:layout_alignBottom="@+id/qtyText" />

    <TextView
        android:id="@+id/textView85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView41"
        android:layout_below="@+id/textView41"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:text="Non Pref. Qty : " />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="2.5 KG"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/textView85"
        android:layout_alignBottom="@+id/textView85"
        android:layout_toStartOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView92"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        android:text="2.5 Kg" />

    <TextView
        android:id="@+id/textView94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pref . Qty : "
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:layout_alignBaseline="@+id/textView93"
        android:layout_alignBottom="@+id/textView93"
        android:layout_toStartOf="@+id/textView93" />

    <TextView
        android:id="@+id/textView95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView85"
        android:layout_below="@+id/textView85"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text="Trade Qty: " />

    <TextView
        android:id="@+id/textView96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5 Kg"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView95"
        android:layout_alignBottom="@+id/textView95"
        android:layout_toEndOf="@+id/textView95" />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentTop="true"
         android:id="@+id/relativeLayout"
         android:layout_alignStart="@+id/vegNameText"
         android:layout_alignBottom="@+id/recyclerView1">

         <Switch
             android:id="@+id/switch_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_alignParentTop="true"
             android:layout_marginTop="15dp"
             android:theme="@style/MySwitch"
             android:layout_marginRight="10dp"
             android:text="" />
     </RelativeLayout>

    <TextView
        android:id="@+id/textView103"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.56 Kg"
        android:layout_above="@+id/recyclerView1"
        android:layout_alignEnd="@+id/recyclerView1" />

    <TextView
        android:id="@+id/textView104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Qty: "
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/textView103"
        android:layout_alignBottom="@+id/textView103"
        android:layout_toStartOf="@+id/textView103" />
</RelativeLayout>