<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:id="@+id/view"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="3dp">

            <EditText
                android:id="@+id/editText15"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView70"
                android:layout_alignBottom="@+id/textView70"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView71"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText3"
                android:layout_alignBottom="@+id/editText3"
                android:layout_toEndOf="@+id/textView27"
                android:text="Excess : " />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText10"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView37"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText10"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Wastage : " />

            <TextView
                android:id="@+id/vegNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:text="Cuccumber"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/ratingBar"
                android:layout_marginLeft="5dp"
                android:text="Veg Quality : " />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/orderQtyText"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/textView37"
                android:numStars="5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/orderQtyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/vegNameText"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="Ordered Qty : 125Kg"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Farm Name : "
                android:layout_below="@+id/ratingBar"
                android:layout_alignStart="@+id/textView10" />

            <TextView
                android:id="@+id/farmNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ratingBar"
                android:layout_alignStart="@+id/ratingBar"
                android:layout_alignTop="@+id/textView37"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="New Text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView31"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/black_border"
                android:gravity="center"
                android:text="SAVE"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/farmNameText"
                android:layout_toEndOf="@+id/textView78" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText6"
                android:layout_centerHorizontal="true"
                android:text="" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView37"
                android:layout_below="@+id/farmNameText"
                android:layout_marginTop="23dp"
                android:text="Received" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView64"
                android:layout_alignBottom="@+id/textView64"
                android:layout_alignStart="@+id/ratingBar"
                android:inputType="numberDecimal"
                android:layout_toStartOf="@+id/textView71" />

            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prference : "
                android:layout_marginLeft="15dp"
                android:layout_alignBaseline="@+id/toggleButton"
                android:layout_alignBottom="@+id/toggleButton"
                android:layout_alignStart="@+id/textView71" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:checked="false"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:theme="@style/MySwitch"
                android:layout_alignTop="@+id/textView79"
                android:layout_toEndOf="@+id/textView78" />
            <TextView
                android:id="@+id/textView79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate : "
                android:layout_alignBaseline="@+id/rateText"
                android:layout_alignBottom="@+id/rateText"
                android:layout_alignStart="@+id/textView70" />
            <EditText
                android:id="@+id/rateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText3"
                android:layout_alignEnd="@+id/editText3"
                android:layout_marginBottom="12dp"
                android:inputType="numberDecimal"
                android:layout_alignStart="@+id/editText3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Pref Qty: "
                android:layout_below="@+id/rateText"
                android:layout_alignStart="@+id/textView79"
                android:id="@+id/textView90" />
            <TextView
                android:id="@+id/textView86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10.0 Kg"
                android:textStyle="bold"
                android:layout_below="@+id/rateText"
                android:layout_alignStart="@+id/rateText" />
            <TextView
                android:id="@+id/textView87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pref Qty : "
                android:layout_below="@+id/rateText"
                android:layout_toEndOf="@+id/textView27" />
            <TextView
                android:id="@+id/textView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.0 Kg"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/textView87"
                android:layout_alignBottom="@+id/textView87"
                android:layout_toEndOf="@+id/textView87" />
            <TextView
                android:id="@+id/textView89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade Qty: "
                android:layout_below="@+id/textView90"
                android:layout_alignStart="@+id/textView90"
                android:layout_marginTop="12dp" />
            <TextView
                android:id="@+id/textView91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10.0 Kg"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_alignBaseline="@+id/textView89"
                android:layout_alignBottom="@+id/textView89"
                android:layout_toEndOf="@+id/textView89" />
            <TextView
                android:id="@+id/textView105"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom Qty: "
                android:layout_alignBaseline="@+id/textView91"
                android:layout_alignBottom="@+id/textView91"
                android:layout_toEndOf="@+id/rateText" />

            <TextView
                android:id="@+id/textView106"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.0 Kg"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/textView105"
                android:layout_alignBottom="@+id/textView105"
                android:layout_toEndOf="@+id/textView105" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>

