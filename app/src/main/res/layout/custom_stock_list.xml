<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_bg">

        <TextView
            android:id="@+id/textView98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetable Name "
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"
            android:theme="@style/MySwitch"
            android:layout_marginRight="9dp"
            android:layout_alignBaseline="@+id/textView98"
            android:layout_alignBottom="@+id/textView98"
            android:layout_alignParentEnd="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            android:layout_below="@+id/switch2"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/textView99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:text="Stock Qty :" />
            <EditText
                android:id="@+id/editText9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:inputType="numberDecimal"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView99"
                android:layout_marginStart="22dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:text="Preference Status : "
            android:layout_below="@+id/checkBox7"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="10dp"
            android:theme="@style/MySwitch"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/textView100"
            android:layout_toStartOf="@+id/checkBox7" />
        <TextView
            android:id="@+id/textView101"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/black_border"
            android:gravity="center"
            android:text="SAVE"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
           />
    </RelativeLayout>


</RelativeLayout>