<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#1A000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cied.in.fcpacking.CustomerDetailsActivity"
    tools:showIn="@layout/activity_customer_details">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topCard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Box Quantity:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/groupNameText"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView5"
                android:layout_alignBottom="@+id/groupNameText"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Quantity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/textView6"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packed Quantity : "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView7"
                android:layout_below="@+id/groupNameText"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Veg. : 2.5Kg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:id="@+id/textView39"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView2"
                android:src="@drawable/star"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/textView39"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zone : "
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:id="@+id/zoneText"
                android:layout_below="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView39"
                android:layout_alignStart="@+id/textView39" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="SAVE"
        android:textStyle="bold"
        android:background="@drawable/black_border"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/textView13"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView13">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A000000">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/firstCard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/noteText"
                        android:hint="Customer Note"
                        android:textColor="@color/black"
                        android:textColorHint="#80000000"
                        android:textSize="16sp"
                        android:inputType="textMultiLine"
                        android:background="@color/white"
                        android:gravity="top|left"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:id="@+id/second"
                android:layout_below="@id/firstCard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Subscription"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/textView15" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:layout_below="@+id/second"
                android:id="@+id/subscriptionCard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/text1"
                        android:layout_alignParentStart="true"
                        android:id="@+id/subcriptionRecyclerView">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:layout_below="@+id/subscriptionCard"
                android:id="@+id/third">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Custom"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:id="@+id/text6"
                        android:textColor="@color/colorPrimaryDark"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:layout_below="@+id/third"
                android:id="@+id/customCard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/text3"
                        android:layout_alignParentStart="true"
                        android:id="@+id/customRecyclerView">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@drawable/black_border"
                android:layout_below="@+id/customCard"
                android:id="@+id/boxWt">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:id="@+id/box_weight_text"
                        android:hint="Box weight"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHint="#80000000"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"
                        android:background="@color/white"
                        android:gravity="top|left"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/black_border"
                android:layout_below="@+id/boxWt"
                android:id="@+id/complaintCard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Cancelled"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/checkBox"
                        android:layout_marginTop="24dp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Shortage"
                        android:id="@+id/checkBox2"
                        android:layout_alignTop="@+id/checkBox"
                        android:layout_centerHorizontal="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Quantity"
                        android:layout_marginRight="10dp"
                        android:id="@+id/checkBox3"
                        android:layout_alignTop="@+id/checkBox2"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/black_border"
                android:layout_below="@+id/complaintCard"
                android:id="@+id/complaintnotes">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/complaintNoteText"
                        android:hint="Complaint Note"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHint="#80000000"
                        android:textSize="16sp"
                        android:inputType="textMultiLine"
                        android:background="@color/white"
                        android:gravity="top|left"
                        android:padding="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
        </ScrollView>
</RelativeLayout>
