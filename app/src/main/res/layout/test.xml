<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:paddingRight="10dp"
    android:layout_height="350dp">

    <TextView
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="DONE"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/black_border"
        android:textSize="20sp"
        android:id="@+id/textView29"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/checkBox6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pack Status"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:id="@+id/textView23"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView29" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:id="@+id/checkBox4"
        android:layout_alignTop="@+id/checkBox5"
        android:layout_alignStart="@+id/textView23" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Completed"
        android:id="@+id/checkBox5"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView23"
        android:layout_toEndOf="@+id/checkBox6"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Box Status"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:id="@+id/textView24"
        android:layout_below="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"
        android:layout_marginTop="24dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Box Not Filled"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:layout_marginTop="29dp" />
</RelativeLayout>